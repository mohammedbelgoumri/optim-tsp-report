{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "main.tex"
            ]
        },
        {
            "label": "compile2",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "main.tex"
            ],
            "dependsOn": [
                "compile"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "*.aux",
                "*.log",
                "*.out",
                "*.bcf",
                "*.xml",
            ],
            "dependsOn": [
                "compile2"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}